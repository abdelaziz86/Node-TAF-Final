<%- include("partials/header") %>

    <h2 class="text-center">✏️ Modifier un Livre</h2>

    <form action="/edit/<%= book._id %>" method="POST" class="p-4 bg-light shadow-sm rounded">
        <div class="mb-3">
            <label class="form-label">Titre</label>
            <input type="text" name="title" class="form-control" required minlength="3" value="<%= book.title %>">
        </div>
        <div class="mb-3">
            <label class="form-label">Auteur</label>
            <input type="text" name="author" class="form-control" required minlength="3" value="<%= book.author %>">
        </div>
        <div class="mb-3">
            <label class="form-label">Année de publication</label>
            <input type="number" name="year" class="form-control" required max="<%= new Date().getFullYear() %>"
                value="<%= book.year %>">
        </div>
        <div class="mb-3">
            <label class="form-label">Résumé</label>
            <textarea name="summary" class="form-control" maxlength="500"><%= book.summary %></textarea>
        </div>
        <button type="submit" class="btn btn-warning w-100">Mettre à jour 📝</button>
    </form>

    <%- include("partials/footer") %>